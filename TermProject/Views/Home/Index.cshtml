@model IEnumerable<TermProject.Models.Animal>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p class="text-center">This is a website where you can talk about your favorite animals, and in case the animal you like
    isnt in the list you can add its name, description, and species.</p>
</div>
