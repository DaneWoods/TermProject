    <table class="table tavle-md text-md-left table-bordered">
        <thead>
            <tr>
                <th>Mammals</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TermProject.Models.Animal a in Model)
            {
                if (a.Class == "Mammal")
                {
                    <tr>
                        <td>
                            Name: @a.Name<br />
                            Description: @a.Description<br />
                            Diet: @a.Diet
                        </td>
                    </tr>
                }
            }
        </tbody>
